<Window x:Class="TheApothecary.Views.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина - The Apothecary" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Border BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
                <TextBlock Text="The Apothecary" 
                          FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Foreground="#2C3E50"/>
                <TextBlock Text="Корзина покупок" 
                          FontSize="18" FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Foreground="#34495E"/>
            </StackPanel>

            <Border Grid.Row="1" 
                    x:Name="PrescriptionWarningText"
                    Background="#FFF8E1" 
                    BorderBrush="#FFA000" 
                    BorderThickness="1"
                    Padding="15"
                    Margin="0,0,0,15"
                    CornerRadius="4"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                    <TextBlock Text="Некоторые товары требуют проверки рецепта сотрудником" 
                              FontSize="14" Foreground="#E65100"
                              FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                <ItemsControl x:Name="CartItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="15,12" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>


                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock Text="{Binding Medicine.Name}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding Medicine.Description}" 
                                                   FontSize="12" Foreground="#7F8C8D"
                                                   TextWrapping="Wrap" MaxWidth="300"/>


                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Рецепт: " 
                                                       FontSize="11" Foreground="#95A5A6"/>
                                            <TextBlock Text="{Binding RequiresPrescription}" 
                                                       FontSize="11" 
                                                       Foreground="{Binding RequiresPrescriptionTextColor}"/>
                                            <TextBlock Text=" • Проверен: " 
                                                       FontSize="11" Foreground="#95A5A6" Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding IsPrescriptionVerified}" 
                                                       FontSize="11"
                                                       Foreground="{Binding IsPrescriptionVerifiedTextColor}"/>
                                        </StackPanel>
                                    </StackPanel>


                                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="20,0">
                                        <TextBlock Text="Кол-во" FontSize="11" Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Quantity}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#2C3E50"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="20,0">
                                        <TextBlock Text="Цена" FontSize="11" Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Price}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#27AE60"/>
                                    </StackPanel>


                                    <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center" Margin="20,0">
                                        <TextBlock Text="Сумма" FontSize="11" Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding TotalPrice}" 
                                                   FontSize="14" FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#2C3E50"/>
                                    </StackPanel>


                                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="❌" 
                                                Click="RemoveItem_Click"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8"
                                                FontSize="12"
                                                Cursor="Hand"
                                                ToolTip="Удалить из корзины"/>
                                        <Button Content="📋" 
                                                Click="VerifyPrescription_Click"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8"
                                                FontSize="12"
                                                Cursor="Hand"
                                                ToolTip="Проверить рецепт"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>


            <Border Grid.Row="3" 
                    Background="#F8F9FA" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    Padding="20"
                    Margin="0,0,0,15"
                    CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               x:Name="TotalText"
                               Text="Итого: 0₽ (товаров: 0)" 
                               FontSize="16" FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Закрыть" 
                                Click="CloseButton_Click"
                                Background="Transparent"
                                Foreground="#7F8C8D"
                                BorderBrush="#7F8C8D"
                                BorderThickness="1"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                FontSize="14"/>

                        <Button Content="Оформить заказ" 
                                Click="CheckoutButton_Click"
                                Background="#3498DB"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="20,8"
                                FontSize="14"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>