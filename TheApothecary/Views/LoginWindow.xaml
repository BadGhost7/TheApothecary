<Window x:Class="TheApothecary.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему - The Apothecary" Height="434" Width="352"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Text="The Apothecary" 
                      FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"
                      Foreground="#2C3E50"/>

            <!-- Форма входа -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Вход в систему" 
                          FontSize="18" FontWeight="SemiBold"
                          Margin="0,0,0,25"
                          HorizontalAlignment="Center"/>

                <TextBox x:Name="EmailTextBox" 
                        Tag="Email"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,20"/>

                <PasswordBox x:Name="PasswordBox" 
                            Tag="Пароль"
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,25"/>

                <Button x:Name="LoginButton" 
                       Content="Войти" 
                       Click="LoginButton_Click"
                       Style="{StaticResource PrimaryButton}"
                       Height="45"
                       Margin="0,0,0,15"/>

                <TextBlock Text="Нет аккаунта? Зарегистрироваться" 
                          HorizontalAlignment="Center"
                          FontSize="12"
                          Foreground="#3498DB"
                          Cursor="Hand"
                          MouseDown="RegisterText_MouseDown"/>
            </StackPanel>

            <!-- Футер -->

        </Grid>
    </Border>
</Window>