<Window x:Class="TheApothecary.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему - The Apothecary" Height="434" Width="352"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="The Apothecary" 
                      FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"
                      Foreground="#2C3E50"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Вход в систему" 
                          FontSize="18" FontWeight="SemiBold"
                          Margin="0,0,0,25"
                          HorizontalAlignment="Center"/>

                <TextBox x:Name="EmailTextBox" 
                        Height="40" 
                        Padding="10"
                        Text="Email"
                        Foreground="Gray"
                        Margin="0,0,0,20"
                        GotFocus="EmailTextBox_GotFocus"
                        LostFocus="EmailTextBox_LostFocus"/>

                
                <Grid Margin="0,0,0,25" Height="40">
                    <PasswordBox x:Name="PasswordBox" 
                                Height="40"
                                Padding="10"
                                PasswordChar="•"
                                GotFocus="PasswordBox_GotFocus"
                                LostFocus="PasswordBox_LostFocus"/>
                    <TextBlock x:Name="PasswordPlaceholder" 
                              Text="Пароль" 
                              Foreground="Gray"
                              Padding="10,0,0,0"
                              VerticalAlignment="Center"
                              IsHitTestVisible="False"/>
                </Grid>

                <Button x:Name="LoginButton" 
                       Content="Войти" 
                       Click="LoginButton_Click"
                       Height="45"
                       Background="#3498DB"
                       Foreground="White"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,15"/>

                <TextBlock Text="Нет аккаунта? Зарегистрироваться" 
                          HorizontalAlignment="Center"
                          FontSize="12"
                          Foreground="#3498DB"
                          Cursor="Hand"
                          MouseDown="RegisterText_MouseDown"/>
            </StackPanel>

            <TextBlock Grid.Row="2" 
                      Text="© 2024 The Apothecary"
                      FontSize="10" Foreground="#95A5A6"
                      HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>