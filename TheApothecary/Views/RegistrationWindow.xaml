<Window x:Class="TheApothecary.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация - The Apothecary" Height="649" Width="461"
        WindowStartupLocation="CenterOwner">

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="The Apothecary" 
                      FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"
                      Foreground="#2C3E50"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Регистрация" 
                          FontSize="18" FontWeight="SemiBold"
                          Margin="0,0,0,25"
                          HorizontalAlignment="Center"/>

                <TextBox x:Name="FirstNameTextBox" 
                        Tag="Имя"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,15"/>

                <TextBox x:Name="LastNameTextBox" 
                        Tag="Фамилия"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,15"/>

                <TextBox x:Name="EmailTextBox" 
                        Tag="Email"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,15"/>

                <PasswordBox x:Name="PasswordBox" 
                            Tag="Пароль"
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,15"/>

                <PasswordBox x:Name="ConfirmPasswordBox" 
                            Tag="Подтвердите пароль"
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,20"/>

                <ComboBox x:Name="RoleComboBox" 
                         Height="40" Margin="0,0,0,20">
                    <ComboBoxItem Content="Покупатель" IsSelected="True"/>
                    <ComboBoxItem Content="Сотрудник"/>
                </ComboBox>

                <Button Content="Зарегистрироваться" 
                        Click="RegisterButton_Click"
                        Style="{StaticResource PrimaryButton}" 
                        Height="45"/>
            </StackPanel>

            <TextBlock Grid.Row="2" 
                      FontSize="10" Foreground="#95A5A6"
                      HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
