<Window x:Class="TheApothecary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="The Apothecary - Аптека" Height="816" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="The Apothecary" 
                          Foreground="White" FontSize="20" FontWeight="Bold"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="UserInfoText" Text="Гость" 
                              Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button x:Name="LoginBtn" Content="Войти" Click="LoginBtn_Click" 
                            Style="{StaticResource HeaderButton}"/>
                    <Button x:Name="RegisterBtn" Content="Регистрация" Click="RegisterBtn_Click" 
                            Style="{StaticResource HeaderButton}" Margin="10,0,0,0"/>
                    <Button x:Name="CartBtn" Content="🛒 Корзина (0)" Click="CartBtn_Click" 
                            Style="{StaticResource HeaderButton}" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="MedicinesItemsControl" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="10" 
                                Background="White" Width="220" Height="300">
                            <StackPanel>
                                <Border Background="#F8F9FA" Height="120" Margin="10,10,10,5">
                                    <TextBlock Text="💊" FontSize="40" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                                          Margin="10,5" TextWrapping="Wrap" FontSize="14"/>

                                <TextBlock Text="{Binding Description}" FontSize="10" 
                                          Margin="10,0" TextWrapping="Wrap" Height="40" Foreground="#666"/>

                                <TextBlock Text="{Binding Price}" 
                                          FontWeight="Bold" Margin="10,5" Foreground="#27AE60"/>

                                <StackPanel Orientation="Horizontal" Margin="10,5">
                                    <TextBlock Text="В наличии:" Margin="0,0,5,0" FontSize="10"/>
                                    <TextBlock Text="{Binding StockQuantity}" FontSize="10"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="10,5">
                                    <TextBlock Text="Рецепт:" Margin="0,0,5,0" FontSize="10"/>
                                    <TextBlock x:Name="PrescriptionText" FontSize="10"/>
                                </StackPanel>

                                <Button Content="В корзину" Click="AddToCart_Click" 
                                        Tag="{Binding}" Margin="10" Height="30"
                                        Style="{StaticResource PrimaryButton}" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к работе"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>