<Window x:Class="TheApothecary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="The Apothecary - Аптека" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

   
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="The Apothecary" 
                          Foreground="White" FontSize="20" FontWeight="Bold"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="UserInfoText" Text="Гость" 
                              Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button x:Name="LoginBtn" Content="Войти" Click="LoginBtn_Click" 
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="10,5" Cursor="Hand" FontSize="12"/>
                    <Button x:Name="RegisterBtn" Content="Регистрация" Click="RegisterBtn_Click" 
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="10,5" Cursor="Hand" FontSize="12" Margin="10,0,0,0"/>
                    <Button x:Name="CartBtn" Content="🛒 Корзина (0)" Click="CartBtn_Click" 
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Padding="10,5" Cursor="Hand" FontSize="12" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

     
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MedicinesItemsControl" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="10" 
                                Background="White" Width="220" Height="320">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>

                               
                                <Border Grid.Row="0" Background="#F8F9FA" Margin="10,10,10,5">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="💊" FontSize="24" Margin="10,0,10,0"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                                                  TextWrapping="Wrap" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                              
                                <StackPanel Grid.Row="1" Margin="10,0">
                                    <TextBlock Text="{Binding Description}" FontSize="9" 
                                              TextWrapping="Wrap" Height="40" Foreground="#666" Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding Price}" FontWeight="Bold" Foreground="#27AE60" Margin="0,0,0,5"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="В наличии:" Margin="0,0,5,0" FontSize="10"/>
                                        <TextBlock Text="{Binding StockQuantity}" FontSize="10"/>
                                        <TextBlock Text=" шт." FontSize="10" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Рецепт:" Margin="0,0,5,0" FontSize="10"/>
                                        <TextBlock Text="{Binding RequiresPrescriptionText}" FontSize="10"/>
                                    </StackPanel>
                                </StackPanel>

                              
                                <Button Grid.Row="2" 
                                       Content="В КОРЗИНУ" 
                                       Click="AddToCart_Click" 
                                       Tag="{Binding}"
                                       Background="#3498DB" 
                                       Foreground="White"
                                       BorderThickness="0"
                                       Height="40"
                                       Margin="15,5,15,10"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к работе"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
