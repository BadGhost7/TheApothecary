<Window x:Class="TheApothecary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="The Apothecary - Аптека" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
       
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

    
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="The Apothecary" 
                          Foreground="White" FontSize="20" FontWeight="Bold"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="UserInfoText" Text="Гость" 
                              Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>

             
                    <StackPanel x:Name="ManageMedicinesPanel" Orientation="Horizontal" 
                                Visibility="Collapsed" Margin="5,0,10,0">
                        <Button x:Name="AddMedicineBtn" Content="➕ Добавить" 
                                Width="90" Height="30" Click="AddMedicineBtn_Click"
                                Background="#27AE60" Foreground="White" BorderThickness="0"
                                Margin="0,0,5,0"/>
                    </StackPanel>

                
                    <Button Content="✅ Проверить" 
                            Click="CheckDbButton_Click" 
                            Width="90" Height="30"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Margin="0,0,5,0"
                            ToolTip="Проверить базу данных"/>

                    <Button Content="🔄 Сбросить" 
                            Click="ResetDbButton_Click" 
                            Width="90" Height="30"
                            Background="#E74C3C" Foreground="White" BorderThickness="0"
                            Margin="0,0,15,0"
                            ToolTip="Сбросить базу данных"/>

              
                    <Button x:Name="LoginBtn" Content="Войти" Click="LoginBtn_Click" 
                            Width="70" Height="30"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Cursor="Hand" FontSize="12"/>

                    <Button x:Name="RegisterBtn" Content="Регистрация" Click="RegisterBtn_Click" 
                            Width="90" Height="30"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Cursor="Hand" FontSize="12" Margin="5,0,0,0"/>

                    <Button x:Name="CartBtn" Content="🛒 Корзина (0)" Click="CartBtn_Click" 
                            Width="100" Height="30"
                            Background="#3498DB" Foreground="White" BorderThickness="0" 
                            Cursor="Hand" FontSize="12" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

     
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MedicinesItemsControl" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="10" 
                                Background="White" Width="280" Height="350">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                               
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#F8F9FA" Margin="10,10,10,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                                            <TextBlock Text="💊" FontSize="24" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="Bold" 
                                                      TextWrapping="Wrap" 
                                                      FontSize="13" 
                                                      VerticalAlignment="Center"
                                                      MaxWidth="140"/>
                                      
                                        </StackPanel>

                                      
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                                    x:Name="MedicineControlsPanel" 
                                                    Visibility="{Binding IsEmployee, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    Margin="0,0,5,0">
                                            <Button Content="✏️" 
                                                    Tag="{Binding Id}"
                                                    Click="EditMedicineBtn_Click" 
                                                    Width="25" Height="25"
                                                    Background="#F39C12" Foreground="White"
                                                    BorderThickness="0" Margin="2"
                                                    ToolTip="Редактировать"/>

                                            <Button Content="❌" 
                                                    Tag="{Binding Id}"
                                                    Click="DeleteMedicineBtn_Click" 
                                                    Width="25" Height="25"
                                                    Background="#E74C3C" Foreground="White"
                                                    BorderThickness="0" Margin="2"
                                                    ToolTip="Удалить"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,0">
                                    <StackPanel>
                                      
                                        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="0,0,0,5" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding Description}" 
                                                      FontSize="11" 
                                                      TextWrapping="Wrap" 
                                                      Foreground="#666"
                                                      MaxHeight="60"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </Border>

                                  
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                            <TextBlock Text="Цена:" Margin="0,0,5,0" 
                                                      FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Price}" 
                                                      Foreground="#27AE60" FontSize="14" FontWeight="Bold"/>
                                        </StackPanel>

                                     
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                            <TextBlock Text="В наличии:" Margin="0,0,5,0" 
                                                      FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding StockQuantity}" FontSize="11"/>
                                            <TextBlock Text=" шт." FontSize="11" Margin="5,0,0,0"/>
                                        </StackPanel>

                                   
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                            <TextBlock Text="Категория:" Margin="0,0,5,0" 
                                                      FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Category}" 
                                                      FontSize="11" Foreground="#3498DB"
                                                      TextWrapping="Wrap"
                                                      MaxWidth="150"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Рецепт:" Margin="0,0,5,0" 
                                                      FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding RequiresPrescriptionText}" 
                                                      FontSize="11"
                                                      Foreground="{Binding RequiresPrescriptionColor}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>

                           
                                <Button Grid.Row="2" 
                                       Content="В КОРЗИНУ" 
                                       Click="AddToCart_Click" 
                                       Tag="{Binding Id}"
                                       Background="#3498DB" 
                                       Foreground="White"
                                       BorderThickness="0"
                                       Height="35"
                                       Margin="15,5,15,10"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

       
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов к работе"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>